{
  "name": "sphinx-myst-demo",
  "version": "1.0.0",
  "scripts": {
    "xref": "npm-run-all -p serve:xref watch:xref",
    "watch:xref": "npm-watch",
    "serve:xref": "serve ./myst -l 9090",
    "build:xref": "sphinx-build -b myst . myst",

    "clean:myst": "myst clean --cache -y",
    "start:myst": "myst start",
    "start:myst-headless": "myst start --headless",
    "myst:headless": "npm-run-all -s clean:myst start:myst-headless",
    "myst": "npm-run-all -s clean:myst start:myst"
  },
  "watch": {
    "build:xref": {
      "patterns": [
        "**/"
      ],
      "extensions": ["py", "rst"],
      "runOnChangeOnly": false
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "serve": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "mystmd": "^1.2.9"
  }
}
