{
  "name": "sphinx-myst-demo",
  "version": "1.0.0",
  "scripts": {
    "xref": "npm-run-all -p serve:xref watch:xref",
    "watch:xref": "npm-watch build:xref",
    "serve:xref": "serve ./_build/sphinx -l 9090",
    "build:xref": "sphinx-build -b myst sphinx _build/sphinx",

    "clean:myst": "myst clean --cache -y",
    "start:myst": "myst start --headless",
    "watch:myst": "npm-run-all -s clean:myst start:myst",
    "myst": "npm-watch watch:myst "
  },
  "watch": {
    "build:xref": {
      "patterns": [
        "**"
      ],
      "extensions": ["py", "rst"],
      "runOnChangeOnly": false
    },
    "watch:myst": {
      "patterns": [
        "_build/sphinx"
      ],
      "extensions": ["json"],
      "runOnChangeOnly": false
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "serve": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "mystmd": "^1.2.9"
  }
}
